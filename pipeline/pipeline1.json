								},
								"sink": {
									"name": "DateOfBirth",
									"type": "String",
									"physicalType": "UTF8"
								}
							},
							{
								"source": {
									"name": "JoinDate",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "JoinDate",
									"type": "String",
									"physicalType": "UTF8"
								}
							}
